<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DefineUserCriterion">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/HeadLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- text Wiek-->
        <TextView
            android:id="@+id/TextWiek"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/notatka_przedzial_wiek"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:textSize="24sp" />

        <!--od wiek-->
        <EditText
            android:id="@+id/editOdWiek"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:maxLength="3"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/notatka_OdWiek"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/TextWiek"
            app:layout_constraintTop_toTopOf="parent" />


        <!--do wiek-->
        <EditText
            android:id="@+id/editDoWiek"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:maxLength="3"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/notatka_DoWiek"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/editOdWiek"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>





</android.support.constraint.ConstraintLayout>